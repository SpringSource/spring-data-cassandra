<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:cassandra="http://www.springframework.org/schema/data/cassandra"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
       	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
       	http://www.springframework.org/schema/data/cassandra
       	http://www.springframework.org/schema/data/cassandra/spring-cassandra.xsd
       	http://www.springframework.org/schema/context 
       	http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="org.springframework.data.cassandra.test" />

	<!--  This is the example of the XML Schema Namespace backed by the Java Handlers -->
	<cassandra:cassandra keyspace="test_keyspace"/>
	<cassandra:template write-consistency="ANY"/>

</beans>